	State : CLEANUP_STATE;
	StateAfterRead : CLEANUP_STATE;
	StateAfterDelete : CLEANUP_STATE;
	StateAfterInfo : CLEANUP_STATE;
	Logger : ARRAY[0..LOG_NUM] OF STRING[LOG_LEN];
	TmpStr1 : STRING[STRING_LEN];
	TmpStr2 : STRING[STRING_LEN];
